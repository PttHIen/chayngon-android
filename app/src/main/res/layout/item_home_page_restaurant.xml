<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_item_restaurant"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    card_view:cardElevation="8dp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile_image_restaurant"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:padding="2dp" />

        <TextView
            android:id="@+id/title_restaurants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_image_restaurant"
            android:maxLines="2"
            android:minLines="2"
            android:text="sdfd"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/fee_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/title_restaurants"
            android:layout_marginLeft="15dp"
            android:background="@drawable/service_fee_icon" />

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/tv_fee_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_restaurants"
            android:layout_toRightOf="@id/fee_icon"
            android:text="30 min"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/baking"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/title_restaurants"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tv_fee_icon"
            android:background="@drawable/baking" />

        <TextView
            android:id="@+id/tv_baking"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_restaurants"
            android:layout_toRightOf="@id/baking"
            android:text="0
"
            android:textSize="12dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>